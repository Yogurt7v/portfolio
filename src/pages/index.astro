---
import MainLayout from '../layouts/MainLayout.astro';
import {
  Portfolio,
  Timeline,
  Footer,
  Skills,
  Header,
  About,
  GithubSection,
  Achievements,
} from '../components';
import { projects } from '../data/projects';
import { skills } from '../data/skills';
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Мое портфолио</title>
  </head>
  <body>
    <MainLayout title="Моё Портфолио">
      <Header client:load />
      <About client:load />
      <Portfolio client:idle projects={projects} />
      <GithubSection client:idle />
      <Timeline client:load />
      <Skills client:load skillsArray={skills} />
      <Achievements client:load />
      <Footer client:idle />
    </MainLayout>
  </body>
</html>

---
import { BackgroundGradient } from '../components';
import '../styles/global.css';
import { AboutSite } from '../data/aboutSite';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}
---

<html lang="ru" class="overflow-x-hidden">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/fav.svg" />
    <link rel="canonical" href={AboutSite.canonicalURL} />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={AboutSite.description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={AboutSite.title} />
    <meta property="og:description" content={AboutSite.description} />
    <meta property="og:image" content={new URL(AboutSite.image, Astro.url)} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url.href} />
    <meta property="twitter:title" content={AboutSite.title} />
    <meta property="twitter:description" content={AboutSite.description} />
    <meta property="twitter:image" content={new URL(AboutSite.image, Astro.url)} />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <title>{AboutSite.title}</title>
  </head>
  <body
    class="bg-slate-900 text-white selection:bg-brand-light/30 min-h-screen overflow-x-hidden custom-scrollbar"
  >
    <BackgroundGradient client:only="react" />
    <main class="flex flex-col items-center w-full max-w-7xl mx-auto px-4 py-8">
      <slot />
    </main>
  </body>
</html>

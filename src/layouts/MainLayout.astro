---
interface Props {
  title: string;
}

import '../styles/global.css';
const { title } = Astro.props;
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900 text-white selection:bg-brand-light/30">
    <div
      class="fixed inset-0 -z-10 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-800 via-slate-900 to-black"
    >
    </div>

    <main class="max-w-6xl mx-auto px-4 py-8">
      <slot />
    </main>
  </body>
</html>

---
import { BackgroundGradient } from '../components';
import '../styles/global.css';

interface Props {
  title?: string;
}
const { title = 'Портфолио' } = Astro.props;
---

<html lang="ru" class="overflow-x-hidden">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Персональный сайт и портфолио" />
    <title>{title}</title>
  </head>
  <body
    class="bg-slate-900 text-white selection:bg-brand-light/30 min-h-screen overflow-x-hidden custom-scrollbar"
  >
    <BackgroundGradient client:only="react" />
    <main class="flex flex-col items-center w-full max-w-7xl mx-auto px-4 py-8">
      <slot />
    </main>
  </body>
</html>
